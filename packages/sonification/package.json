{
  "name": "@uturi/sonification",
  "version": "0.0.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "Accessibility tool that converts numerical data into musical melodies for visually impaired users",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "keywords": [
    "accessibility",
    "a11y",
    "sonification",
    "music",
    "melody"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "dev:test": "npx http-server . -p 3000 -c-1",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@uturi/config-eslint": "workspace:*",
    "@uturi/config-typescript": "workspace:*",
    "@uturi/config-vitest": "workspace:*",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.0.0"
  }
}
